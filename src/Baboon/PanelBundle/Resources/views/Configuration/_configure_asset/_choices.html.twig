<div class="well well-sm">
    <legend class="text-center">{{ 'configure' }}: {{ asset.label }}</legend>
    <select id="asset-data-wrap" class="form-control">
        {% for option in asset.choices %}
            <option value="{{ option }}">{{ option }}</option>
        {% endfor %}
    </select>
    <br>
    <div class="well well-sm">
        <button class="btn btn-sm btn-primary pull-right" onclick="ConfigureAsset.saveAssetValue(this, '{{ assetKey }}')">
            {{ 'save.value'|trans }}
        </button>
        <br>
        <br>
    </div>
</div>

{% extends 'BaboonPanelBundle:Base:base.html.twig' %}

{% block title %}
    Configuration
{% endblock %}

{% block content %}
    {% for asset in data.assets %}
        <div class="well well-sm col-sm-12">
            {% if asset.isDefaultValue %}
                <span class="label label-warning label-xs pull-right">
                     {{ 'using.default' }}
                </span>
            {% endif %}
            <legend class="col-sm-11">
                {{ asset.label }}
            </legend>
            <div class="col-sm-12">
                {{ include('BaboonPanelBundle:Configuration/_assets:_'~asset.type~'.html.twig') }}
            </div>
        </div>
    {% endfor %}
{% endblock %}

{% block script %}
    {{ parent() }}
    <script src="{{ asset('/bundles/baboonpanel/js/panel/baboon.js') }}"></script>
{% endblock %}
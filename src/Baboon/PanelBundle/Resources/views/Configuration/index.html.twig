{% extends 'BaboonPanelBundle:Base:base.html.twig' %}

{% block title %}
    Configuration
    <div class="btn-group pull-right">
        <button type="button" class="btn btn-success" onclick="ConfigureTheme.syncTheme();">{{ 'synchronize'|trans }}</button>
        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li>
                <a onclick="ConfigureTheme.deployToGit();">
                    {{ 'deploy.to.git'|trans }}
                </a>
            </li>
            <li>
                <a onclick="ConfigureTheme.deployToFTP();">
                    {{ 'deploy.to.ftp'|trans }}
                </a>
            </li>
        </ul>
    </div>
{% endblock %}

{% block content %}
    {% for assetKey, asset in data.assets %}
        <div class="well well-sm col-sm-12" id="asset-{{ assetKey }}-wrap-div">
            {{ include('BaboonPanelBundle:Configuration/_widgets:_asset_wrap.html.twig') }}
        </div>
    {% endfor %}
{% endblock %}

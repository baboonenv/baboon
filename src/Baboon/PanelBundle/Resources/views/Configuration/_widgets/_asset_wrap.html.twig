<div class="panel-group">
    <div class="panel panel-default">
        <a data-toggle="collapse" href="#{{ asset.path|transform_id }}">
            <div class="panel-heading">
                <h4 class="panel-title">
                    {{ asset.label }}
                    {% if asset.isDefaultValue is defined and asset.isDefaultValue %}
                        <span class="label label-warning label-xs pull-right">
                            {{ 'using.default' }}
                        </span>
                    {% endif %}
                </h4>
            </div>
        </a>
        <div id="{{ asset.path|transform_id }}" class="panel-collapse collapse">
            <div class="panel-body">
                {{ include('BaboonPanelBundle:Configuration/_assets:_'~asset.type~'.html.twig') }}
            </div>
            <div class="panel-footer">
                {% if asset.type != 'tree' %}
                    <button class="btn btn-primary btn-xs" onclick="ConfigureAsset.configureField(this, '{{ asset.path }}')">
                        <i class="fa fa-cogs"></i>
                        {{ 'configure'|trans }}
                    </button>
                {% else %}
                    <button class="btn btn-warning btn-xs pull-right" onclick="ConfigureAsset.addItem(this, '{{ asset.path }}')">
                        <i class="fa fa-plus-square"></i>
                        {{ 'add.item'|trans }}
                    </button>
                    <br>
                {% endif %}
            </div>
        </div>
    </div>
</div>

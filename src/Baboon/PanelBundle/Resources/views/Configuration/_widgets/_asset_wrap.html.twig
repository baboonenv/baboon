<div class="col-sm-12">
    <div class="col-sm-2">
        {% if asset.type != 'tree' %}
            <button class="btn btn-primary btn-xs" onclick="ConfigureAsset.configureField(this, '{{ asset.path }}')">
                <i class="fa fa-cogs"></i>
                {{ 'configure'|trans }}
            </button>
        {% else %}
            <button class="btn btn-warning btn-xs" onclick="ConfigureAsset.addItem(this, '{{ asset.path }}')">
                <i class="fa fa-plus-square"></i>
                {{ 'add.item'|trans }}
            </button>
        {% endif %}
    </div>
    <div class="col-sm-8">
        <legend class="col-sm-11">
            {{ asset.label }}
        </legend>
    </div>
    <div class="col-sm-2 text-center">
        {% if asset.isDefaultValue is defined and asset.isDefaultValue %}
            <span class="label label-warning label-xs">
                {{ 'using.default' }}
            </span>
        {% endif %}
    </div>
</div>
<div class="col-sm-12">
    {{ include('BaboonPanelBundle:Configuration/_assets:_'~asset.type~'.html.twig') }}
</div>
